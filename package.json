{
  "name": "mili",
  "version": "4.2.2",
  "description": "Scaffolding with continuous control over the development of the project.",
  "main": "lib/index.js",
  "module": "es/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mili-project-manager/mili.git"
  },
  "bugs": {
    "url": "https://github.com/mili-project-manager/mili/issues"
  },
  "homepage": "https://github.com/mili-project-manager/mili#readme",
  "keywords": [
    "mili",
    "scaffold",
    "template",
    "templates",
    "continuous"
  ],
  "author": "Val.istar.Guo <val.istar.guo@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=12.13.0"
  },
  "bin": "./lib/src/cli.js",
  "scripts": {
    "clean": "rm -rf ./lib/*",
    "ca": "git add -A && git-cz -av",
    "ci": "git-cz",
    "release": "standard-version --no-verify",
    "prepublishOnly": "npm test && npm run build",
    "test": "ava",
    "coveralls": "nyc npm test && nyc report --reporter=text-lcov | coveralls",
    "prereport": "rm -rf .nyc_output coverage",
    "report": "nyc --reporter=html --reporter=text-summary --skip-full ava",
    "lint": "eslint \"src/**/*.ts\" \"tests/**/*.ts\"  --fix",
    "prebuild": "npm run clean",
    "build:es": "ttsc -p build/tsconfig.es.json && npm run copyfile:es",
    "build:lib": "ttsc -p build/tsconfig.lib.json && npm run copyfile:lib",
    "build": "npm run build:lib && npm run build:es",
    "watch": "NODE_ENV=development ttsc -p build/tsconfig.lib.json -w",
    "test:update": "ava -u",
    "test:debug": "ava --verbose",
    "release:alpha": "standard-version --prerelease alpha",
    "release:first": "standard-version --first-release",
    "copyfile:es": "copyfiles -e \"@(build|es|lib|node_modules|tests|doc)/**/*.!(ts)\" -e \"@(README.md|CHANGELOG.md|ava.config.js|backers.md)\" \"**/*.!(ts)\" es",
    "copyfile:lib": "copyfiles -e \"@(build|es|lib|node_modules|tests|doc)/**/*.!(ts)\" -e \"@(README.md|CHANGELOG.md|ava.config.js|backers.md)\" \"**/*.!(ts)\" lib",
    "prepare": "is-ci || husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.0",
    "@commitlint/config-conventional": "^12.0.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "ava": "^3.10.1",
    "commitizen": "^4.2.3",
    "copyfiles": "^2.4.1",
    "coveralls": "^3.1.0",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^7.20.0",
    "husky": "^5.1.1",
    "is-ci": "^3.0.0",
    "lint-staged": "^11.0.0",
    "mili": "^3.10.2",
    "nyc": "^15.1.0",
    "sinon": "^10.0.0",
    "standard-version": "^9.1.1",
    "ts-node": "^9.1.1",
    "ttypescript": "^1.5.12",
    "typescript": "^4.2.2",
    "typescript-transform-paths": "^2.2.3"
  },
  "dependencies": {
    "@types/cosmiconfig": "^6.0.0",
    "@types/diff": "^5.0.0",
    "@types/fs-extra": "^9.0.1",
    "@types/inquirer": "^7.3.1",
    "@types/js-yaml": "^4.0.1",
    "@types/micromatch": "^4.0.1",
    "@types/node": "^14.14.31",
    "@types/ramda": "^0.27.11",
    "@types/semver": "^7.3.1",
    "ajv": "^8.1.0",
    "ajv-formats": "^2.1.0",
    "ajv-keywords": "^5.0.0",
    "chalk": "^4.1.0",
    "commander": "^7.2.0",
    "cosmiconfig": "^7.0.0",
    "diff": "^5.0.0",
    "fs-extra": "^10.0.0",
    "handlebars": "^4.7.7",
    "inquirer": "^8.1.0",
    "is-ssh": "^1.3.3",
    "is-url": "^1.2.4",
    "js-yaml": "^4.1.0",
    "json5": "^2.2.0",
    "micromatch": "^4.0.2",
    "ora": "^5.4.0",
    "ramda": "^0.27.0",
    "semver": "^7.3.2",
    "simple-git": "^2.39.0",
    "uuid": "^3.4.0",
    "validate-npm-package-name": "^3.0.0"
  },
  "types": "lib/index.d.ts"
}
